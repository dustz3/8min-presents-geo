// 變數定義
$primary-color = #1e3a8a
$secondary-color = #3b82f6
$accent-color = #1e40af
$success-color = #10b981
$error-color = #ef4444
$warning-color = #f59e0b
$text-color = #2c3e50
$light-text = #6b7280
$white = #ffffff
$light-bg = #f5f7fa
$gradient-bg = linear-gradient(135deg, $light-bg 0%, #c3cfe2 100%)

// 混合器
gradient-bg($start, $end)
  background: linear-gradient(135deg, $start, $end)

box-shadow($x = 0, $y = 5px, $blur = 15px, $color = rgba(0, 0, 0, 0.1))
  box-shadow: $x $y $blur $color

border-radius($radius = 10px)
  border-radius: $radius

transition($property = all, $duration = 0.3s, $timing = ease)
  transition: $property $duration $timing

// 全局樣式
*
  margin: 0
  padding: 0
  box-sizing: border-box

body
  font-family: 'Microsoft JhengHei', 'PingFang TC', 'Helvetica Neue', Arial, sans-serif
  background: $gradient-bg
  color: $text-color
  overflow: hidden

// 簡報容器
.presentation-container
  width: 100vw
  height: 100vh
  position: relative

// 投影片樣式
.slide
  width: 100%
  height: 100%
  position: absolute
  top: 0
  left: 0
  opacity: 0
  transition: opacity 0.5s ease-in-out
  display: flex
  align-items: center
  justify-content: center
  padding: 60px
  
  &.active
    opacity: 1

.slide-content
  max-width: 1200px
  width: 100%
  height: 100%
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  text-align: center
  background: rgba($white, 0.95)
  border-radius: 20px
  padding: 40px
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1)

// 標題樣式
.main-title
  font-size: 3.5rem
  font-weight: bold
  color: $primary-color
  margin-bottom: 10px
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1)

.subtitle
  font-size: 1.8rem
  color: $secondary-color
  margin-bottom: 30px
  font-weight: 300

h1
  font-size: 2.5rem
  color: $primary-color
  margin-bottom: 20px

h2
  font-size: 1.8rem
  color: $secondary-color
  margin-bottom: 15px

h3
  font-size: 1.4rem
  color: $accent-color
  margin-bottom: 15px

h4
  font-size: 1.2rem
  color: $accent-color
  margin-bottom: 10px

// 問題框
.question-box
  gradient-bg($secondary-color, $accent-color)
  color: $white
  padding: 30px
  border-radius: 15px
  margin: 30px 0
  box-shadow: 0 10px 20px rgba($secondary-color, 0.3)

.highlight-text
  font-size: 1.3rem
  font-weight: 500
  line-height: 1.6

// 趨勢區塊
.trend-section
  margin: 30px 0

.ai-platforms
  display: flex
  justify-content: center
  gap: 30px
  margin-top: 20px

.platform
  display: flex
  flex-direction: column
  align-items: center
  background: $white
  padding: 20px
  border-radius: 10px
  box-shadow: box-shadow()
  transition: transform 0.3s ease
  
  &:hover
    transform: translateY(-5px)

.platform-icon
  font-size: 2rem
  margin-bottom: 10px

// 定義框
.definition-box
  gradient-bg(#dbeafe, #bfdbfe)
  padding: 25px
  border-radius: 15px
  margin: 20px 0
  border-left: 5px solid $secondary-color

// 對比區塊
.comparison-section
  margin: 30px 0

.old-vs-new
  display: flex
  align-items: center
  justify-content: center
  gap: 30px
  margin: 20px 0

.old, .new
  background: $white
  padding: 20px
  border-radius: 10px
  box-shadow: box-shadow()
  flex: 1
  max-width: 200px

.old
  border-left: 4px solid $error-color

.new
  border-left: 4px solid $success-color

.arrow
  font-size: 2rem
  color: $secondary-color
  font-weight: bold

// 核心目標
.core-goal
  gradient-bg(#fef3c7, #fde68a)
  padding: 20px
  border-radius: 10px
  margin: 20px 0
  border: 2px solid $warning-color

// 比較表格
.comparison-table
  margin: 30px 0
  width: 100%
  max-width: 800px

  table
    width: 100%
    border-collapse: collapse
    background: $white
    border-radius: 10px
    overflow: hidden
    box-shadow: box-shadow()

  th
    gradient-bg($secondary-color, $accent-color)
    color: $white
    padding: 15px
    text-align: center
    font-weight: 600

  td
    padding: 15px
    text-align: center
    border-bottom: 1px solid #e5e7eb

  tr:nth-child(even)
    background: #f8fafc

// 例子容器
.examples-container
  display: grid
  grid-template-columns: 1fr 1fr
  gap: 30px
  margin: 30px 0
  width: 100%
  max-width: 900px

.bad-example, .good-example
  background: $white
  padding: 25px
  border-radius: 15px
  box-shadow: box-shadow()

.bad-example
  border-left: 5px solid $error-color

.good-example
  border-left: 5px solid $success-color

.bad-text
  color: $error-color
  font-weight: 500
  margin-bottom: 10px

.good-text
  color: $success-color
  font-weight: 500
  margin-bottom: 10px

.explanation
  font-size: 0.9rem
  color: $light-text
  font-style: italic

// 提示框
.tip-box
  gradient-bg(#ecfdf5, #d1fae5)
  padding: 20px
  border-radius: 10px
  margin: 20px 0
  border: 2px solid $success-color

// 產業網格
.industries-grid
  display: grid
  grid-template-columns: repeat(2, 1fr)
  gap: 20px
  margin: 30px 0
  width: 100%
  max-width: 600px

.industry
  background: $white
  padding: 20px
  border-radius: 10px
  box-shadow: box-shadow()
  text-align: center
  transition: transform 0.3s ease
  
  &:hover
    transform: translateY(-3px)

.industry-icon
  font-size: 2.5rem
  display: block
  margin-bottom: 10px

// AI未來區塊
.ai-future
  gradient-bg(#fef3c7, #fde68a)
  padding: 25px
  border-radius: 15px
  margin: 30px 0
  border: 2px solid $warning-color

.bni-connection
  gradient-bg(#dbeafe, #bfdbfe)
  padding: 20px
  border-radius: 10px
  margin: 20px 0
  border: 2px solid $secondary-color

// 解決方案流程
.solution-process
  display: grid
  grid-template-columns: repeat(4, 1fr)
  gap: 20px
  margin: 30px 0
  width: 100%
  max-width: 1000px

.step
  background: $white
  padding: 20px
  border-radius: 10px
  box-shadow: box-shadow()
  text-align: center
  transition: transform 0.3s ease
  
  &:hover
    transform: translateY(-3px)

.step-number
  width: 40px
  height: 40px
  gradient-bg($secondary-color, $accent-color)
  color: $white
  border-radius: 50%
  display: flex
  align-items: center
  justify-content: center
  margin: 0 auto 15px
  font-weight: bold
  font-size: 1.2rem

// 案例研究
.case-study
  margin: 30px 0

.before-after
  display: grid
  grid-template-columns: 1fr 1fr
  gap: 30px
  margin: 20px 0

.before, .after
  background: $white
  padding: 20px
  border-radius: 10px
  box-shadow: box-shadow()
  text-align: center

.before
  border-left: 4px solid $error-color

.after
  border-left: 4px solid $success-color

// CTA框
.cta-box
  gradient-bg($secondary-color, $accent-color)
  color: $white
  padding: 40px
  border-radius: 20px
  margin: 30px 0
  box-shadow: 0 15px 30px rgba($secondary-color, 0.3)

  h2
    color: $white
    font-size: 2rem
    margin-bottom: 15px

// 聯絡資訊
.contact-info
  margin: 30px 0

.contact-item
  display: flex
  align-items: center
  justify-content: center
  gap: 10px
  margin: 10px 0
  background: $white
  padding: 15px
  border-radius: 10px
  box-shadow: box-shadow()

.contact-icon
  font-size: 1.2rem

// QR碼區塊
.qr-section
  margin: 30px 0

.qr-placeholder
  background: $white
  padding: 30px
  border-radius: 15px
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1)
  text-align: center
  display: inline-block

  span
    font-size: 4rem
    display: block
    margin-bottom: 10px

// 頁腳
.footer
  margin-top: 30px
  color: $light-text
  font-size: 0.9rem

// 導航按鈕
.navigation
  position: fixed
  bottom: 30px
  left: 50%
  transform: translateX(-50%)
  display: flex
  align-items: center
  gap: 20px
  background: rgba($white, 0.9)
  padding: 15px 25px
  border-radius: 50px
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1)
  backdrop-filter: blur(10px)

.nav-btn
  gradient-bg($secondary-color, $accent-color)
  color: $white
  border: none
  width: 40px
  height: 40px
  border-radius: 50%
  font-size: 1.2rem
  cursor: pointer
  transition: transform 0.3s ease
  
  &:hover
    transform: scale(1.1)

.slide-counter
  font-weight: 600
  color: $primary-color
  font-size: 0.9rem

// 演講者資訊
.presenter-info
  position: absolute
  bottom: 20px
  right: 20px
  background: rgba($white, 0.9)
  padding: 10px 20px
  border-radius: 20px
  font-size: 0.9rem
  color: $light-text

// 響應式設計
@media (max-width: 768px)
  .slide-content
    padding: 20px
  
  .main-title
    font-size: 2.5rem
  
  .subtitle
    font-size: 1.4rem
  
  .examples-container
    grid-template-columns: 1fr
  
  .solution-process
    grid-template-columns: repeat(2, 1fr)
  
  .industries-grid
    grid-template-columns: 1fr
  
  .ai-platforms
    flex-direction: column
    gap: 15px
  
  .old-vs-new
    flex-direction: column
    gap: 15px
  
  .before-after
    grid-template-columns: 1fr

// 動畫效果
@keyframes fadeIn
  from
    opacity: 0
    transform: translateY(20px)
  to
    opacity: 1
    transform: translateY(0)

.slide.active .slide-content
  animation: fadeIn 0.8s ease-out
